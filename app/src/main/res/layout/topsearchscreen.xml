<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity17">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#FAFAFA"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:text="intershala"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#EAEAEA"
                android:layout_marginEnd="80dp"
                android:layout_marginStart="15dp"
                android:paddingStart="40dp"
                android:id="@+id/sersch"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="#9B5A5A"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:textSize="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/clear"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search2"
                android:layout_alignParentTop="true"
                android:layout_marginTop="65dp"
                android:layout_marginStart="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top"
                android:layout_below="@+id/sersch"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/top"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Accounts     Tags     Places"
                android:layout_below="@+id/sersch"
                android:layout_toRightOf="@+id/top"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#888888"
                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:layout_below="@id/top"
                android:background="@drawable/line"
                android:backgroundTint="@color/black"
                android:layout_marginTop="10dp"
                />

            </RelativeLayout>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_6"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp"
                            android:id="@+id/image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="intershala"
                            android:textSize="18dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"
                            android:id="@+id/name"
                            android:layout_toRightOf="@+id/image"
                            />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="intershala"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_marginStart="10dp"
                                android:textColor="#888888"
                                android:layout_below="@+id/name"
                                android:layout_toRightOf="@+id/image"
                                />

                     </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_40"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/image1"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#888888"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#intershala"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/name1"
                        android:layout_toRightOf="@+id/image1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000+ posts"
                        android:textSize="15dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#888888"
                        android:layout_below="@+id/name1"
                        android:layout_toRightOf="@+id/image1"
                        />

                </RelativeLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_40"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/image2"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#888888"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#intershala_nomotheory_challenge"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/name2"
                        android:layout_toRightOf="@+id/image2"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500+ posts"
                        android:textSize="15dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#888888"
                        android:layout_below="@+id/name2"
                        android:layout_toRightOf="@+id/image2"
                        />

                </RelativeLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_40"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/image3"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#888888"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="intershala"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/name3"
                        android:layout_toRightOf="@+id/image3"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="intershala+B-610,untech bussiness zone..."
                        android:textSize="15dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#888888"
                        android:layout_below="@+id/name3"
                        android:layout_toRightOf="@+id/image3"
                        />

                </RelativeLayout>

            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_40"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/image4"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#888888"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="intershalastudentpartner"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/name4"
                        android:layout_toRightOf="@+id/image4"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name4"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/image4"
                        android:text="500+ posts"
                        android:textColor="#888888"
                        android:textSize="15dp" />

                </RelativeLayout>

            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_40"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/image5"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#888888"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="intershalaincampus"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/name5"
                        android:layout_toRightOf="@+id/image5"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100+ posts"
                        android:textSize="15dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#888888"
                        android:layout_below="@+id/name5"
                        android:layout_toRightOf="@+id/image5"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>