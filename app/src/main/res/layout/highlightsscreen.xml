<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_9"
    tools:context=".MainActivity8">

<!--    bottom bar-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/my_highlight"
        android:layout_centerHorizontal="true"
        android:id="@+id/bottombar"
        />

<!--    top things-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/close"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/img_10"
        android:id="@+id/circle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highlight"
        android:layout_toEndOf="@+id/circle"
        android:layout_marginTop="63dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/highlight"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December 3, 2023"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/highlight"
        android:layout_marginTop="63dp"
        android:layout_marginStart="10dp"
        android:textSize="18dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highlight"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/sound"
        android:layout_marginStart="5dp"
        android:text="Artist. Song Title"
        android:textColor="@color/white"
        android:id="@+id/song"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/soundwave"
        android:layout_below="@+id/highlight"
        android:layout_marginStart="55dp"
        android:id="@+id/sound"
        />

<!--    // top lines of the highlights multiple-->

    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:background="@drawable/line"
        android:backgroundTint="#ECECEC"
        android:layout_marginTop="50dp"
        android:id="@+id/line"
        android:layout_marginStart="8dp"
        />
    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:background="@drawable/line"
        android:backgroundTint="#B9B9B9"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/line"
        android:id="@+id/line2"
        android:layout_marginStart="8dp"
        />

    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:background="@drawable/line"
        android:backgroundTint="#B9B9B9"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/line2"
        android:id="@+id/line3"
        android:layout_marginStart="8dp"
        />

    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:background="@drawable/line"
        android:backgroundTint="#B9B9B9"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/line3"
        android:id="@+id/line4"
        android:layout_marginStart="8dp"
        />
    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:background="@drawable/line"
        android:backgroundTint="#B9B9B9"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/line4"
        android:id="@+id/line5"
        android:layout_marginStart="8dp"
        />


    <!--    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/group_1"

            />-->
</RelativeLayout>