<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity5">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_41"
        android:layout_centerInParent="true"
        android:id="@+id/image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/like2"
        android:layout_below="@+id/image"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:id="@+id/like"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/like"
        android:background="@drawable/comment"
        android:layout_below="@+id/image"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:id="@+id/comment"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/comment"
        android:background="@drawable/share"
        android:layout_below="@+id/image"
        android:layout_marginTop="5dp"
        android:id="@+id/share"
        android:layout_marginStart="10dp"
        android:textSize="28dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/options"
        android:layout_below="@+id/image"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/save"
        android:layout_below="@+id/image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textSize="23dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/like"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_alignStart="@+id/like"
        android:src="@drawable/img"
        android:id="@+id/likedby"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liked by "
        android:layout_toEndOf="@+id/likedby"
        android:layout_below="@+id/comment"
        android:layout_marginTop="14dp"
        android:layout_marginStart="8dp"
        android:id="@+id/textlikedby"
        android:textSize="15dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="craig_love "
        android:layout_toEndOf="@+id/textlikedby"
        android:layout_below="@+id/comment"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:id="@+id/person"
        android:textSize="15dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="and"
        android:layout_toEndOf="@+id/person"
        android:layout_below="@id/comment"
        android:layout_marginTop="14dp"
        android:id="@+id/textand"
        android:textSize="15dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  44,686 others "
        android:layout_toEndOf="@+id/textand"
        android:layout_below="@+id/comment"
        android:layout_marginTop="14dp"
        android:textStyle="bold"
        android:id="@+id/others"
        android:textSize="15dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="joshua_I"
        android:layout_below="@id/likedby"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/joshua"
        android:textSize="15dp"
        android:textColor="@color/black"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/likedby"
        android:layout_toEndOf="@+id/joshua"
        android:text="The game in Japan was amazing and I want to share some photos"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/image"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/img_2"
        android:id="@+id/postedby"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="joshua_I"
        android:layout_toEndOf="@id/postedby"
        android:layout_above="@id/image"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:id="@+id/joshua2"
        android:textSize="15dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tokyo, Japan"
        android:layout_alignStart="@+id/joshua2"
        android:layout_above="@id/image"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:id="@+id/place"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/verfied_badge"
        android:layout_toEndOf="@id/joshua2"
        android:layout_above="@+id/place"
        android:textColor="#935855"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/options"
        android:layout_above="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/postedby"
        android:layout_below="@+id/topbar"
        android:layout_marginBottom="20dp"
        android:src="@drawable/img_3"
        app:civ_border_width="3dp"
        app:civ_border_color="#B71B54"
        android:layout_marginStart="15dp"
        android:id="@+id/acc1"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/postedby"
        android:layout_below="@+id/topbar"
        android:layout_marginBottom="20dp"
        android:src="@drawable/img_2"
        app:civ_border_width="3dp"
        app:civ_border_color="#B71B54"
        android:layout_toEndOf="@+id/acc1"
        android:layout_marginStart="17dp"
        android:id="@+id/acc2"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/postedby"
        android:layout_below="@+id/topbar"
        android:layout_marginBottom="20dp"
        android:src="@drawable/img_4"
        app:civ_border_width="3dp"
        app:civ_border_color="#B71B54"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/acc2"
        android:id="@+id/acc3"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/postedby"
        android:layout_below="@+id/topbar"
        android:layout_marginBottom="20dp"
        android:src="@drawable/img_5"
        app:civ_border_width="3dp"
        app:civ_border_color="#B71B54"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/acc3"
        android:id="@+id/acc4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Story"
        android:textColor="@color/black"
        android:layout_above="@+id/postedby"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="18dp"
        android:textSize="16sp"
        android:id="@+id/yourstory"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="joshua_I"
        android:textColor="@color/black"
        android:layout_above="@+id/postedby"
        android:layout_toRightOf="@+id/yourstory"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="22dp"
        android:textSize="16sp"
        android:id="@+id/craig"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="craig_love"
        android:textColor="@color/black"
        android:layout_above="@+id/postedby"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/craig"
        android:layout_marginStart="22dp"
        android:textSize="16sp"
        android:id="@+id/josh"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="karenne"
        android:textColor="@color/black"
        android:layout_above="@+id/postedby"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="22dp"
        android:layout_toRightOf="@+id/josh"
        android:textSize="16sp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/home__filled_" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/home"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/post"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/create" />

        <ImageView
            android:id="@+id/notifs"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/post"
            android:src="@drawable/like" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/notifs"
            android:src="@drawable/img_3"
            app:civ_border_color="#935855"
            app:civ_border_width="3dp"
            android:id="@+id/profile"
            />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topbar">

            <TextView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/camera"
                android:layout_marginTop="40dp"
                android:id="@+id/cam"
                android:layout_marginStart="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socially"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_marginTop="48dp"
                android:textColor="#935855" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/share"
                android:backgroundTint="#935855"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:id="@+id/topshare"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/inbox"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/music"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="60dp" />
        </RelativeLayout>

    </RelativeLayout>
